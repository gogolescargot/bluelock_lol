@model List<BlueLock.Models.Player>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container x-auto text-center">
    <h1 class="m-2">Welcome</h1>
    <p>Upload your custom games here, download the game in your history match, get the .rofl match and upload it right below.</p>

    <form id="fileForm" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-10 form-group">
                <input type="file" name="file" class="form-control" />
            </div>
            <button type="submit" class="col-2 btn btn-primary">Upload</button>
        </div>
    </form>

    <div id="errorAlert" class="alert alert-danger alert-dismissible fade m-4" role="alert" style="display:none;">
        <span id="errorAlertMessage"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div id="successAlert" class="alert alert-success alert-dismissible fade m-4" role="alert" style="display:none;">
        <span id="successAlertMessage"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="container mt-4">
        <h2>Leaderboard</h2>
        <table class="table table-striped" id="leaderboard">
            <thead>
                <tr>
                    <th onclick="sortTable(0)">Name</th>
                    <th onclick="sortTable(1)">KDA</th>
                    <th onclick="sortTable(2)">Win Rate</th>
                    <th onclick="sortTable(3)">Cs/Min</th>
                    <th onclick="sortTable(4)">Vision Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model)
                {
                    <tr>
                        <td>@player.name</td>
                        <td>@player.kda</td>
                        <td>@player.winRate</td>
                        <td>@player.csMin</td>
                        <td>@player.visionScore</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
function sortTable(columnIndex) {
    var table = document.getElementById("leaderboard");
    var rows = Array.from(table.rows).slice(1)
    var sortedRows;

    if (table.getAttribute("data-sort-direction") === "asc") {
        sortedRows = rows.sort((a, b) => a.cells[columnIndex].innerText > b.cells[columnIndex].innerText ? 1 : -1);
        table.setAttribute("data-sort-direction", "desc");
    } else {
        sortedRows = rows.sort((a, b) => a.cells[columnIndex].innerText < b.cells[columnIndex].innerText ? 1 : -1);
        table.setAttribute("data-sort-direction", "asc");
    }

    for (var row of sortedRows) {
        table.tBodies[0].appendChild(row);
    }
};
</script>

<script>
    $(document).ready(function () {
        $('#fileForm').on('submit', function (event) {
            event.preventDefault();

            var formData = new FormData(this);

            $.ajax({
                url: '/Home/Upload',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        $('#successAlertMessage').text(response.message);
                        $('#successAlert').show().addClass('show');
                        $('#errorAlert').hide();
                    } else {
                        $('#errorAlertMessage').text(response.message);
                        $('#errorAlert').show().addClass('show');
                        $('#successAlert').hide();
                    }
                },
                error: function () {
                    $('#errorAlertMessage').text('An unexpected error occurred.');
                    $('#errorAlert').show().addClass('show');
                    $('#successAlert').hide();
                }
            });
        });
    });
</script>
